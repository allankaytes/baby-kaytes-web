<%- include("./partials/header") %>
<div class="row">
	<div class="col-md-12">
		<form action="/forgot" method="POST">
			<legend>Trouble accessing your account?</legend>
			<p>Enter the email address you use for babykaytes.com and we'll send you a password reset link.</p>
			<div class="form-group">
				<label for="email">EMAIL</label>
				<input type="email" name="email" placeholder="Enter Email" autofocus class="form-control">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary" value="Reset Password">
			</div>
		</form>
	</div>
</div>
<%- include("partials/footer") %>